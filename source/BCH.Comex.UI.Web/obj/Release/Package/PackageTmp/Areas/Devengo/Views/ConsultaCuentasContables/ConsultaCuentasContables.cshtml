@model BCH.Comex.UI.Web.Areas.Devengo.Models.ConsultaCuentasContablesViewModel
@{
    ViewBag.Title = "ConsultaCuentasContables";
    ViewBag.Favicon = @Url.Content("~/Content/img/apps/info-de-devengo-inv.png");
}

@section css{
    <style type="text/css">
        .col-xs-7 {
            width: 100%;
        }
</style>
}

<h2>Consulta Cuentas Contables</h2>

@using (Html.BeginForm("DescargarConsultaCuentasContables", "ConsultaCuentasContables", FormMethod.Post, new { id = "ConsultaCuentasContables", name = "ConsultaCuentasContables" }))
{
    <div class="form-horizontal">
        <div class="row">
            <div class="col-xs-2">
                <div class="panel panel-default">
                    <div class="panel-body">

                        <label class="control-label">Consultar por: </label>
                        @foreach (var ck in Model.opt_Filtros)
                        {
                            <div class="row">
                                <div class="col-xs-7">
                                    <div class="radio">
                                        <label class="control-label">
                                            @Html.RadioButtonFor(model => model.FiltroSelected, ck.ID)
                                            @ck.Value
                                        </label>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>

                </div>
            </div>
            <div class="col-xs-10">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label col-xs-6">Num. Cta. : </label>
                                            <div class="col-xs-6">
                                                @Html.EditorFor(c => c.txtNumcta, new { htmlAttributes = new { @class = "form-control", maxlength = "8" } })
                                            </div>
                                        </div>
                                    
                                </div>
                            </div>
                            <div class="col-xs-5">
                                <div class="col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label col-xs-6">Centro de costo: </label>
                                            <div class="col-xs-6">
                                                @Html.EditorFor(c => c.txtCentroCosto, new { htmlAttributes = new { @class = "form-control", maxlength = "3" } })
                                            </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label  col-xs-6">Nem. Cta. : </label>
                                            <div class="col-xs-6">
                                                @Html.EditorFor(c => c.txtNemcta, new { htmlAttributes = new { @class = "form-control", maxlength = "15" } })
                                            </div>
                                        </div>
                                </div>
                            </div>
                            <div class="col-xs-5">
                                <div class="col-xs-12">
                                        <div class="form-group">
                                            <label class="control-label  col-xs-6">Cuenta Corriente: </label>
                                            <div class="col-xs-6">
                                                @Html.EditorFor(c => c.txtCuentaCorriente, new { htmlAttributes = new { @class = "form-control", maxlength = "11" } })
                                            </div>
                                        </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-5">
                                <div class="col-xs-12">
                                        <div class="form-group">
                                            @Html.Label("Hasta", "Fecha desde:", new { @class = "control-label  col-xs-6" })
                                            <div class="col-xs-6">
                                                <div class="input-group date" id="dtpFechaDesde">
                                                    @Html.EditorFor(c => c.txtFechaDesde, new { htmlAttributes = new { @class = "form-control", data_inputmask="'alias': 'date'" } })
                                                    @*<input type="text" class="form-control" id="" />*@
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon glyphicon-calendar"></span>
                                                    </span>
                                                </div>
                                                <label class="control-label has-error col-xs-offset-3" style="display:none" id="lblErrorFechaHasta">La fecha debe ser mayor o igual a la fecha desde</label>
                                            </div>
                                        </div>  
                                </div>
                            </div>
                            <div class="col-xs-5">
                                <div class="col-xs-12">
                                        <div class="form-group">
                                            @Html.Label("Hasta", "Fecha hasta:", new { @class = "control-label  col-xs-6" })
                                            <div class="col-xs-6">
                                                <div class="input-group date" id="dtpFechaHasta">
                                                    @Html.EditorFor(c => c.txtFechaHasta, new { htmlAttributes = new { @class = "form-control" } })
                                                    @*<input type="text" class="form-control" id="" />*@
                                                    <span class="input-group-addon">
                                                        <span class="glyphicon glyphicon-calendar"></span>
                                                    </span>
                                                </div>
                                                <label class="control-label has-error col-xs-offset-3" style="display:none" id="lblErrorFechaHasta">La fecha debe ser mayor o igual a la fecha desde</label>
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-offset-7 col-xs-3">
                                
                                    <input type="submit" id="btnGenerarExcel" name="Command" class="btn btn-success" value="Generar Excel" />@*<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>&nbsp;&nbsp;Generar Excel</input>*@
                                    <input type="submit" id="btnVolver" name="Command" class="btn btn-primary" value="Volver" />@*<span class="glyphicon glyphicon-ok" aria-hidden="true"></span>&nbsp;&nbsp;Generar Excel</input>*@
                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

@section scripts {
    <script type="text/javascript" src="~/scripts/bootstrap-datetimepicker.js"></script>
    @Scripts.Render("~/bundles/JQueryfileDownload")
    @Scripts.Render("~/bundles/Devengo/Common")
    @Scripts.Render("~/bundles/Devengo/ConsultaCuentasContables")
    <script type="text/javascript">
        var urlDescargaConsultaCuentasContables = '@Url.Action("DescargarConsultaCuentasContables", "ConsultaCuentasContables")';
        var modelCompleto = @Html.Raw(Json.Encode(Model));
    </script>
    }