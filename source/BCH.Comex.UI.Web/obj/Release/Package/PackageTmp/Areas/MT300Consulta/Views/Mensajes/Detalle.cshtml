@model BCH.Comex.UI.Web.Areas.MT300Gestion.Models.DetalleViewModel

@{
    ViewBag.Title = "Visualizar Mensaje MT300";
    //ViewBag.Favicon = @Url.Content("~/Content/img/apps/ingreso-asientos-inv.png");
}

<div class="container">
    <div class="row">
        <div class="col-xs-12"><h2>Consulta de Mensajes MT300</h2></div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default" id="panelDetalle">
                <div class="panel-body">
                    @using (Html.BeginForm("Generar", "Mensajes", FormMethod.Post, new { id = "formMensaje" }))
                    {
                    <fieldset>
                        @Html.TextBoxFor(model => model.Mensaje.idProcesados, htmlAttributes: new { @class = "form-control input-sm hidden" })
                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("reference", "Referencia [:20:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.reference, htmlAttributes: new { @class = "form-control input-sm disabled", maxlength = 16, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.reference)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("22A", "Tipo de operación [:22A:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo22A, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("22C", "Referencia común [:22C:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo22C, htmlAttributes: new { @class = "form-control input-sm", maxlength = 16, @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("82A", "Entidad A [:82A:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo82A, htmlAttributes: new { @class = "form-control input-sm", maxlength = 11, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.campo82A)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("87A", "Entidad B [:87A:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo87A, htmlAttributes: new { @class = "form-control input-sm", maxlength = 11, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.campo87A)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("booked_by", "Fecha de negociación [:30T:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.bookedBy, htmlAttributes: new { @class = "form-control input-sm", minlength = 8, maxlength = 8, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.bookedBy)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("value_date", "Fecha de valor [:30V:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.valueDate, htmlAttributes: new { @class = "form-control input-sm", minlength = 8, maxlength = 8, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.valueDate)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("rate", "Tipo de cambio [:36:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.rate, htmlAttributes: new { @class = "form-control input-sm", maxlength = 12, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.rate)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("campo32B", "Moneda, monto [:32B:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo32B, htmlAttributes: new { @class = "form-control input-sm", maxlength = 18, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.campo32B)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("campo53A", "Agente que entrega [:53A:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo53A, htmlAttributes: new { @class = "form-control input-sm", maxlength = 11, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.campo53A)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("campo57A", "Agente que recibe [:57A:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo57A, htmlAttributes: new { @class = "form-control input-sm", maxlength = 11, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.campo57A)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("campo33B", "Moneda, monto [:33B:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo33B, htmlAttributes: new { @class = "form-control input-sm", maxlength = 18, @readonly = "readonly" })
                                @*@Html.ValidationMessageFor(model => model.Mensaje.campo33B)*@
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3 text-right">
                                @Html.Label("campo98D", "Execution Time yyyymmddhhmmss[:98D:]", new { @class = "control-label" })
                            </div>
                            <div class="col-xs-9">
                                @Html.TextBoxFor(model => model.Mensaje.campo98D, htmlAttributes: new { @class = "form-control input-sm", @readonly = "readonly" })
                            </div>
                        </div>

                    </fieldset>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="btn-group">
                                    @if (Model.EsModificacion || Model.EsNuevo)
                                    {
                                        if (Model.EsModificacion)
                                        {
                                            <button type="submit" id="btnSubmit" class="btn btn-primary">Modificar y generar MT-300</button>
                                        }
                                        else
                                        {
                                            <button type="submit" id="btnSubmit" class="btn btn-primary">Generar nuevo MT-300</button>
                                        }
                                    }

                                    <a type="button" id="btnVolver" class="btn btn-default" href="@Url.Action("Index", "Home")">Volver</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/MT300Gestion/Detalle")
<script type="text/javascript">
    @*var urlValidarReferencia = '@Url.Action("ValidarReferencia")';
    var urlValidarFechaYYYYMMDD = '@Url.Action("ValidarFechaYYYYMMDD")';
    var urlValidarCampoMonto = '@Url.Action("ValidarCampoMonto")';
    var urlValidarRate = '@Url.Action("ValidarRate")';*@

    var modelCompleto = @Html.Raw(Json.Encode(Model));
</script>
}

@section css
{
    <style>
        .panel-heading .accordion-toggle:after {
            /* symbol for "opened" panels */
            font-family: 'Glyphicons Halflings'; /* essential for enabling glyphicon */
            content: "\e113";
            float: right;
            color: grey;
        }

        .panel-heading .accordion-toggle.collapsed:after {
            /* symbol for "collapsed" panels */
            font-family: 'Glyphicons Halflings'; /* essential for enabling glyphicon */
            content: "\e114";
            float: right;
            color: grey;
        }
    </style>
}