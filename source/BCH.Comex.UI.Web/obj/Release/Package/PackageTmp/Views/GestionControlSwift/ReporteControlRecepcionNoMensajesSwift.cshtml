@model BCH.Comex.UI.Web.Models.GestionControlSwift.ReporteControlRecepcionNoMensajesSwiftViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.Verbo</title>
    <link rel="stylesheet" href="@Url.Content("~/content/css/bootstrap.css")" />
    <link rel="stylesheet" href="@Url.Content("~/content/css/site.css")" />
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/img/apps/gestion-y-control-inv.png")" />
</head>
<body>
    <div class="container">
        <div class="row header">
            <div class="tit"></div>
        </div>
        <br>
        <div class="row">
            <div class="col-xs-1 col-xs-offset-8"><strong>Fecha</strong></div>
            <div class="col-xs-3"><strong>: @DateTime.Now.ToShortDateString()</strong></div>
        </div>
        <div class="row">
            <div class="col-xs-1 col-xs-offset-8"><strong>Hora</strong></div>
            <div class="col-xs-3"><strong>: @DateTime.Now.ToString("hh:mm:ss")</strong></div>
        </div>

        <div class="row">
            <div class="col-xs-1 col-xs-offset-8"><strong>Página</strong></div>
            <div class="col-xs-3"><strong>: 1 de 1</strong></div>
        </div>

        <table cellpadding=0 cellspacing=0 class="t0">
            <tr>
                <td>
                    <h4 style="font-style: italic; font-family: 'Times New Roman'">@Model.Verbo</h4>
                </td>
                <td><h4 style="text-align:right "><pre style="width: 400px;height:1%; background: #9C9A9A"></pre></h4></td>
            </tr>
        </table>

        <table cellpadding=0 cellspacing=0  style="width:50%" align="center" class="table table-condensed">
                <caption>
                    <h3 style="color: blue; text-align: left; font-family:'Times New Roman';font-style:italic">
                        <strong>
                            @string.Format("{0} {1} {2} {3} {4} {5}",
                        "Fecha de Control:", Model.FechaDesde.Day, " de ", Model.FechaDesde.ToString("MMMM"), " de ", Model.FechaDesde.ToString("yyyy"))
                        </strong>
                    </h3>
                    @*<h3 style="color: blue; text-align: left; font-family: 'Times New Roman'; font-style: italic">
                            @string.Format("{0} {1} {2} {3}",
                        "Fecha de Control",
                        (Model.FechaHasta.HasValue ? "desde el" : "el día"),
                        @Model.FechaDesde.ToString("dd/MMM/yyyy"),
                        (Model.FechaHasta.HasValue ? "al " + Model.FechaHasta.Value.ToString("dd/MMM/yyyy") : String.Empty))
                    </h3>*@
                </caption>
                <thead>
                    @if (Model.Enviados)
                    {
                        <tr>
                            <th>Nro.</th>
                            <th>Sesión</th>
                            <th>Secuencia</th>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <th>Nro.</th>
                            <th>Sesión</th>
                            <th>Secuencia</th>
                        </tr>
                    }
                </thead>
                <tbody>
                    @if (Model.Enviados)
                    {
                        foreach (var row in Model.Registros)
                        {
                            <tr>
                                <td width="10">@(@row.num + "-.")</td>
                                <td>@row.sesion</td>
                                <td>@row.secuencia</td>
                            </tr>
                        }
                    }
                    else
                    {
                        foreach (var row in Model.Registros)
                        {
                            <tr>
                                <td width="10">@(@row.num + "-.")</td>
                                <td>@row.sesion</td>
                                <td>@row.secuencia</td>
                            </tr>
                        }
                    }
                </tbody>
</table>

        <div class="row">
            <div class="col-xs-9"><h5 style="text-align:center"><b>@("Faltan " + @Model.SumaMensaje + " Mensajes en Sistema.")</b></h5></div>
        </div>
        <div class="row">
            <div class="col-xs-9"><h5 style="text-align:center"><b>*Favor, chequear existencia de estos mensajes en el ST-400 y retransmitir.</b></h5></div>
        </div>
    </div>
</body>
</html>
