@using BCH.Comex.UI.Web.Models.FundTransfer
@model ComercioVisibleExportViewModel

<div class="container">
    <h3 id="caption" class="margin-bottom-triple">Comercio Visible Exportaciones @ViewBag.Caption</h3>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3"> 
        <div class="form-group">
            <label>Moneda</label>
                @Html.DropDownListFor(x => x.idCbMnd, Model.Cb_Mnd, "--Seleccione--", new { @class = "form-control",tabindex="1" })
        </div>
        <div class="form-group">
            <label>Tipo de Cambio</label>
                @Html.TextBoxFor(x => x.Tx_MtoVisE_000, new { @class = "form-control monto", tabindex = "2", maxlength = "8" })
        </div>
        <div class="form-group">
            <label>Monto a Liquidar</label>
            @Html.TextBoxFor(x => x.Tx_MtoVisE_001, new { @class = "form-control monto", tabindex = "3", maxlength = "15" })
        </div>
        <div class="form-group">
            <label>Monto a Informar</label>
            @Html.TextBoxFor(x => x.Tx_MtoVisE_002, new { @class = "form-control monto", tabindex = "4", maxlength = "15" })
        </div>
            <div class="form-group margin-bottom-double">
            <label>Monto Transferencia</label>
            @Html.TextBoxFor(x => x.Tx_MtoVisE_003, new { @class = "form-control monto", tabindex = "5", maxlength = "15" })
        </div>
            <div class="text-right">
                <button id="btnAccept" tabindex="6" class="btn btn-primary">Aceptar</button>
                <button id="btnCancel" tabindex="7" class="btn btn-default">Cancelar</button>
            </div>
        </div>
    </div>
    
</div>

@section scripts{
@Scripts.Render("~/bundles/FundTransfer/ComercioVisibleExport")

}