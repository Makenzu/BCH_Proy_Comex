@using BCH.Comex.Core.Entities.Cext01.FundTransfer.UI_Modulos
@using BCH.Comex.Common.UI_Modulos

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Fund Transfer";
    ViewBag.Favicon = Url.Content("~/Content/img/apps/fund-transfer-inv.png");
    UI_Mdi_Principal Mdi_Principal = ViewBag.MdiPrincipal;
}
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="Diálogo Modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modal-title"></h4>
            </div>
            <div class="modal-body" id="modal-body">

            </div>
            <div class="modal-footer" id="modal-footer">

            </div>
        </div>
    </div>
</div>

<div class="container" id="msg-zone">
@foreach (var item in Mdi_Principal.MESSAGES)
{
    string tipo = String.Empty;
    if (item.Type != TipoMensaje.Nada)
    {
        if (item.Type == TipoMensaje.Informacion)
        {
            tipo = "alert-info";
        }
        else if (item.Type == TipoMensaje.Correcto)
        {
            tipo = "alert-success";
        }
        else if (item.Type == TipoMensaje.Error)
        {
            tipo = "alert-danger";
        }
        else if (item.Type == TipoMensaje.Warning)
        {
            tipo = "alert-warning";
        }
        <div class="alert @tipo">
            <a class="close" data-dismiss="alert">×</a>
            <span>
                <strong>@item.Title </strong> @item.Text
            </span>
        </div>
    }
}
</div>

@RenderBody()

@section scripts{
    @Scripts.Render("~/bundles/FundTransfer/Layout")
    @RenderSection("scripts",false)
}

@section css{
    @Styles.Render("~/Content/css/layout.css")
    @RenderSection("css", required: false)
}