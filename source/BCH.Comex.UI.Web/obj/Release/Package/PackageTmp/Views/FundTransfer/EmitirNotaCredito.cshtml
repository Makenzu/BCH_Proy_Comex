@model BCH.Comex.UI.Web.Models.FundTransfer.EmitirNotaCreditoViewModel
@{
    ViewBag.Title = "EmitirNotaCredito";
}

<div class="container">
    <h3>Asociación Operación @ViewBag.Caption</h3>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmitirNotaCredito", name = "frmEmitirNotaCredito", @class = "form-horizontal" }))
    {
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-xs-8">
                        <div class="input-group input-group-sm">
                            @Html.EditorFor(x => x.Tx_NumOpe_000, new { htmlAttributes = new { @class = "form-control", maxlength = "3", min = "0", max = "999", tabindex = "2", data_inputmask = "'mask': '9','repeat': 3, 'greedy' : false" } })
                            <div class="input-group-addon">-</div>
                            @Html.EditorFor(x => x.Tx_NumOpe_001, new { htmlAttributes = new { @class = "form-control", maxlength = "2", min = "0", max = "99", tabindex = "3", data_inputmask = "'mask': '9','repeat': 2, 'greedy' : false" } })
                            <div class="input-group-addon">-</div>
                            @Html.EditorFor(x => x.Tx_NumOpe_002, new { htmlAttributes = new { @class = "form-control", maxlength = "2", min = "0", max = "99", tabindex = "4", data_inputmask = "'mask': '9','repeat': 2, 'greedy' : false" } })
                            <div class="input-group-addon">-</div>
                            @Html.EditorFor(x => x.Tx_NumOpe_003, new { htmlAttributes = new { @class = "form-control", maxlength = "3", min = "0", max = "999", data_inputmask = "'mask': '9','repeat': 3, 'greedy' : false" } })
                            <div class="input-group-addon">-</div>
                            @Html.EditorFor(x => x.Tx_NumOpe_004, new { htmlAttributes = new { @class = "form-control", maxlength = "5", min = "0", max = "99999", tabindex = "5", data_inputmask = "'mask': '9','repeat': 5, 'greedy' : false" } })
                            <div class="input-group-addon">-</div>
                            @Html.EditorFor(x => x.Tx_NumOpe_005, new { htmlAttributes = new { @class = "form-control", maxlength = "2", min = "0", max = "99", data_inputmask = "'mask': '9','repeat': 2, 'greedy' : false" } })
                            <div class="input-group-addon">-</div>
                            @Html.EditorFor(x => x.Tx_NumOpe_006, new { htmlAttributes = new { @class = "form-control", maxlength = "2", min = "0", max = "99", data_inputmask = "'mask': '9','repeat': 2, 'greedy' : false" } })
                        </div>
                    </div>
                    <div class="col-xs-1">
                        <button type="submit" tabindex="6" value="V" id="bot_Ok" name="Command" class="btn btn-success" style="color: white">
                            <i class="glyphicon glyphicon-ok"></i>
                        </button>
                    </div>
                    <div class="col-xs-3">
                        <input type="submit" tabindex="7" value="Aceptar" id="Boton_000" name="Command" class="btn btn-primary"
                               @(Model.Boton_000.Enabled ? "" : "disabled = 'disabled'") />
                        <input type="submit" value="Cancelar" id="Boton_001" name="Command" class="btn btn-default"
                               @(Model.Boton_001.Enabled ? "" : "disabled = 'disabled'") />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6">
                        @Html.EditorFor(x => x.Cb_Producto, new { htmlAttributes = new { @class = "form-control input-sm", tabindex = "1" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-2">R.U.T del Cliente</label>
                    <div class=" col-xs-2">
                        @Html.EditorFor(x => x.Tx_RutPrt, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-2">Nombre del Cliente</label>
                    <div class=" col-xs-4">
                        @Html.EditorFor(x => x.Tx_NomPrt, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-2">Dirección del Cliente</label>
                    <div class="col-xs-4">
                        @Html.EditorFor(x => x.Tx_DirPrt, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    </div>
                </div>

                <fieldset>
                    <legend>Datos de la Factura Seleccionada</legend>
                    <div class="form-group">
                        <label class="col-xs-2">Factura Nro:</label>
                        <div class="col-xs-4">
                            @Html.EditorFor(x => x.Tx_NroFac, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                        <label class="col-xs-2">Fecha Fac:</label>
                        <div class="col-xs-4">
                            @Html.EditorFor(x => x.Tx_FecRep, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2">Reporte Nro:</label>
                        <div class="col-xs-4">
                            @Html.EditorFor(x => x.Tx_NroRep, new { htmlAttributes = new { @class = "form-control input-sm"} })
                        </div>
                        <label class="col-xs-2">Moneda:</label>
                        <div class="col-xs-4">
                            @Html.EditorFor(x => x.Tx_Moneda, new { htmlAttributes = new { @class = "form-control input-sm"} })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2">Tipo Factura:</label>
                        <div class="col-xs-4">
                            @Html.EditorFor(x => x.Tx_tipo, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                        <label class="col-xs-2">Neto:</label>
                        <div class="col-xs-4">
                            @Html.EditorFor(x => x.Tx_Neto, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-offset-6 col-xs-2">Iva:</label>
                        <div class="col-xs-4">
                            @Html.EditorFor(x => x.Tx_Iva, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-offset-6 col-xs-2">Total:</label>
                        <div class="col-xs-4">
                            @Html.EditorFor(x => x.Tx_MtoOri, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/FundTransfer/EmitirNotaCredito")
}