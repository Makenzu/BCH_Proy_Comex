
@{
    ViewBag.Title = "Nuevo Participante - Administrador de Participantes";
    BCH.Comex.Core.Entities.Cext01.AdminParticipantes.UI_Modulos.UI_Mdi_Principal Mdi_Principal = ViewBag.MdiPrincipal;
}

@{ Html.RenderPartial("_MenuMain"); }

<div class="col-md-7 col-md-offset-2">
    <div class="efx-box">       
        <h3 class="margin-bottom-triple">Identificar Participante</h3>
        @*<hr />*@
        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Participante
                    </div>
                    <div class="panel-body">
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionParticipante" id="optIndividuo" value="optIndividuo" checked>
                                Individuo
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionParticipante" id="optBanco" value="optBanco">
                                Banco
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionParticipante" id="optCuentaGlobal" value="optCuentaGlobal">
                                Cuenta Global
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Formato
                    </div>
                    <div class="panel-body">
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionFormato" id="optRut" value="optRut" checked>
                                R.U.T.
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                <input type="radio" name="optionFormato" id="optAlfaNumerico" value="optAlfaNumerico">
                                Alfanúmerico
                            </label>
                        </div>
                        <br />
                    </div>
                </div>
            </div>

            <div class="col-md-1">
            </div>

            <div class="col-md-2">
                <div class="row">
                    <button type="submit" class="btn btn-primary btn-block" id="btnNewPrtyAceptar" disabled style="width:100px">Aceptar</button>
                </div>
                <div class="row">
                    <button class="btn btn-default btn-block" id="btnNewPrtyCancelar" style="width:100px">Cancelar</button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Llave de Identificación
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <input type="text" class="form-control" id='llaveDeIdRut' maxlength="16" placeholder="R.U.T." />
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id='llaveDeIdAlfa' maxlength="12" placeholder="Alfanumérico" />
                        </div>
                        <br />
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Situación
                    </div>
                    <div class="panel-body">
                        <div class="col-md-6">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="chkSituacion" id="chkClienteComex" value="chkClienteComex" checked>
                                    Cliente Comex
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="chkSituacion" id="chkAcreedor" value="chkAcreedor" disabled>
                                    Acreedor
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="chkSituacion" id="chkCorresponsal" value="chkCorresponsal" disabled>
                                    Corresponsal
                                </label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="chkSituacion" id="chkAvisador" value="chkAvisador" disabled>
                                    Avisador
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="confirmarNuevaConsultaParticipante">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Nuevo Participante</h4>
            </div>
            <div class="modal-body">
                <p>El participante ingresado ya existe</p>
                <p>¿Desea consultarlo?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="aceptarConsultaNuevoParticipante">Aceptar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

@section scripts{
    <script type="text/javascript" src="~/Scripts/jquery.rut.min.js"></script>
    @Scripts.Render("~/bundles/AdminParticipantes/base")
    @Scripts.Render("~/bundles/AdminParticipantes/new")
}
