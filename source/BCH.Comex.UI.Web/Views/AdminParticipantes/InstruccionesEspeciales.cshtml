@model BCH.Comex.UI.Web.Models.AdminParticipantes.InstruccionesEspecialesParticipanteViewModel
@{
    ViewBag.Title = "Instrucciones Especiales";
}
@{ Html.RenderPartial("_MenuMain"); }
@*<div class="row">
    <div class="col-xs-12">*@
<div class="container">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmInstruccionesEspeciales", name = "frmInstruccionesEspeciales", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
     
        <h4 class="margin-bottom-double">Instrucciones para Participante</h4>
        <div class="row">
            <div class="col-md-5">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CmbMemo, new { htmlAttributes = new { @class = "form-control input-sm" } })
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.EditorFor(model => model.Aceptar, new
                        {
                            htmlAttributes = new
                            {
                                @class = "btn btn-primary  btn-block",
                                value = "Aceptar",
                                @tabindex = "1",
                                type = "submit",
                                name = "Command"
                            }
                        })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.EditorFor(model => model.Cancelar, new
                        {
                            htmlAttributes = new
                            {
                                @class = "btn btn-default  btn-block",
                                value = "Cancelar",
                                type = "submit",
                                name = "Command"
                            }
                        })
                    </div>
                </div>
            </div>
            <div class="col-md-2">
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                @*<div class="col-md-12">*@
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.prtinstruc.Text, Model.prtinstruc.Enabled == false ? (object)new { disabled = "disabled", @class = "form-control", @rows = "10", @cols = "20" } : (object)new { @class = "form-control", @rows = "10", @cols = "15" })
                            <div>
                                Caractéres: <input type="text" id="caracteres" name=caracteres value="000" tabindex="0" style="border:hidden; background-color:transparent; width:30px;" disabled="disabled" />/ 250
                            </div>
                        </div>
                    </div>
                @*</div>*@
            </div>
            <div class="col-md-2">
            </div>
        </div>
        @*</div>*@
    }
</div>
<input type="hidden" id='urlIndex' data-url='@Url.Action("Index")' />
@*</div>
    </div>*@

@{ Html.RenderPartial("_ConfirmarSalirGuardar"); }

@section css{
    <style type="text/css">
        .control-label .required {
            color: #e02222;
            font-size: 12px;
            padding-left: 2px;
        }

        .form-group {
            margin-bottom: 2px;
            line-height: 24px;
        }

        .form-control {
            display: block;
            width: 100%;
            height: 24px;
            padding: 6px 12px;
            font-size: 12px;
            line-height: 1.4285;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0px 1px 1px rgba(0,0,0,0.075);
            -webkit-transition: border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        }

        .input-sm {
            padding: 0px 10px;
            line-height: 21px;
            height: 21px;
        }

        .btn {
            display: inline-block;
            padding: 4px 10px;
            margin-bottom: 0px;
            font-size: 11px;
            font-weight: normal;
            line-height: 1.2285;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -ms-touch-action: manipulation;
            touch-action: manipulation;
            cursor: pointer;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            background-image: none;
            border: 1px solid transparent;
            border-radius: 4px;
        }

        select.input-sm {
            height: 21px;
            line-height: 21px;
        }   

    </style>
}

@section scripts{
    @Scripts.Render("~/bundles/AdminParticipantes/base")
    @Scripts.Render("~/bundles/AdminParticipantes/InstruccionesParticipante")
    <script>
        CustomSave = function () {
            $('#Aceptar').trigger('click');
        }

        $(function () {
            //$('form').change(function () {
            //    sessionStorage.setItem('modificando', true);
            //});

            $('#Aceptar').click(function () {
                sessionStorage.setItem('modificando', true);
                modificando = sessionStorage.getItem('modificando');
            });
        });
    </script>
}