@section scripts{
    @Scripts.Render("~/bundles/AdminParticipantes/base")
    @Scripts.Render("~/bundles/AdminParticipantes/CuentasParticipante")
    <script>
    $(function () {
        $('#aceptar').click(function () {
            sessionStorage.setItem('modificando', true);
            modificando = sessionStorage.getItem('modificando');
        });
        @if (((BCH.Comex.Core.Entities.Cext01.AdminParticipantes.Datatypes.InitializationObject)Session[BCH.Comex.UI.Web.Common.SessionKeys.AdminParty.PartySessionKey]).UsrEsp.Jerarquia != 1 && ((BCH.Comex.Core.Entities.Cext01.AdminParticipantes.Datatypes.InitializationObject)Session[BCH.Comex.UI.Web.Common.SessionKeys.AdminParty.PartySessionKey]).UsrEsp.Tipeje != "N")
        {
            @: $('#Lista1_SelectedValue').unbind("dblclick");
            @: $('#Lista1_SelectedValue').removeAttr("disabled");
            @: $('#Lista2_SelectedValue').unbind("dblclick");
            @: $('#Lista2_SelectedValue').removeAttr("disabled");
        }
    });
    </script>
}
