@model BCH.Comex.UI.Web.Models.AdminParticipantes.CuentasParticipanteViewModel
@{
    ViewBag.Title = "Cuentas Participante";
}
@{ Html.RenderPartial("_MenuMain");}
<div class="row">
    <div class="col-xs-12">
        <div class="container">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmCuentasParticipante", name = "frmCuentasParticipante", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="margin-bottom-double">
                    @Html.DisplayFor(model => model.Titulo.Text, new { htmlAttributes = new { @class = "form-control" } })
                </h4>
                <div class="row">
                    <div class="col-xs-10">
                        <div class="panel panel-default">
                            <div class="panel-heading">@Html.DisplayFor(model => model.Frame1.Text, new { htmlAttributes = new { @class = "form-control" } })</div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group">
                                            <div class="col-xs-1"></div>
                                                <div class="col-xs-11">
                                                    @Html.DisplayFor(model => model.Label1.Text, new { htmlAttributes = new { @class = "control-label" } })
                                                    @Html.DisplayFor(model => model.Label2.Text, new { htmlAttributes = new { @class = "control-label" } })
                                                    @Html.DisplayFor(model => model.Label3.Text, new { htmlAttributes = new { @class = "control-label" } })
                                                </div>
                                            </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                    @Html.EditorFor(model => model.Lista1, new { htmlAttributes = new { @class = "form-control", multiple = "", @style = "font-family: monospace;" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-2">
                        <div class="form-group">
                            @Html.EditorFor(model => model.aceptar, new
                            {
                               htmlAttributes = new
                               {
                                   @class = "btn btn-primary btn-block",
                                   value = "Aceptar",
                                   type = "submit",
                                   name = "Command",
                                   aria_hidden = "true"
                               }
                            })

                            @Html.EditorFor(model => model.cancelar, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "btn btn-default btn-block",
                                    value = "Cancelar",
                                    type = "submit",
                                    name = "Command",
                                    aria_hidden = "true"
                                }
                            })


                            @Html.EditorFor(model => model.guardar, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "btn btn-success btn-block",
                                    value = "Guardar",
                                    type = "submit",
                                    name = "Command",
                                    aria_hidden = "true"
                                }
                            })
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-10">
                        <div class="panel panel-default">
                            <div class="panel-heading">@Html.DisplayFor(model => model.Frame2.Text, new { htmlAttributes = new { @class = "form-control" } })</div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group">
                                            <div class="col-xs-1"></div>
                                            <div class="col-xs-11">
                                                @Html.DisplayFor(model => model.Label4.Text, new { htmlAttributes = new { @class = "control-label" } })
                                                @Html.DisplayFor(model => model.Label7.Text, new { htmlAttributes = new { @class = "control-label" } })
                                                @Html.DisplayFor(model => model.Label5.Text, new { htmlAttributes = new { @class = "control-label" } })
                                                @Html.DisplayFor(model => model.Label6.Text, new { htmlAttributes = new { @class = "control-label" } })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="form-group">
                                            <div class="col-xs-12">
                                                @Html.EditorFor(model => model.Lista2, new { htmlAttributes = new { @class = "form-control", multiple = "", @style = "font-family: monospace;" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-2">
                        <div class="form-group">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="modalSrchPart" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="Cuentas Corrientes">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalSrchPart_Content">
        </div>
    </div>
</div>

@{ Html.RenderPartial("_ConfirmarSalirGuardar"); }

