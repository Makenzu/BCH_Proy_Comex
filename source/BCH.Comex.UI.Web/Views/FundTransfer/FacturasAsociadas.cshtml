@model BCH.Comex.UI.Web.Models.FundTransfer.FacturasAsociadasViewModel

@{
    ViewBag.Title = "FacturasAsociada";
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmEmitirNotaCredito", name = "frmEmitirNotaCredito" }))
{
    @Html.AntiForgeryToken()

    <div class="container form-horizontal">
        <h3 class="margin-bottom-double">Facturas Asociada a la Operación @ViewBag.Caption</h3>
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-xs-2 label-div">
                            @Html.Label("Operación")
                        </div>
                        <div class="col-xs-8">
                            <div class="input-group">
                                @Html.EditorFor(x => x.Tx_NumOpe_000, new { htmlAttributes = new { @class = "form-control", tabindex = "1", maxlength = "3" } })<div class="input-group-addon">-</div>
                                @Html.EditorFor(x => x.Tx_NumOpe_001, new { htmlAttributes = new { @class = "form-control", tabindex = "2", maxlength = "2" } })<div class="input-group-addon">-</div>
                                @Html.EditorFor(x => x.Tx_NumOpe_002, new { htmlAttributes = new { @class = "form-control", tabindex = "3", maxlength = "2" } })<div class="input-group-addon">-</div>
                                @Html.EditorFor(x => x.Tx_NumOpe_003, new { htmlAttributes = new { @class = "form-control", tabindex = "4", maxlength = "3" } })<div class="input-group-addon">-</div>
                                @Html.EditorFor(x => x.Tx_NumOpe_004, new { htmlAttributes = new { @class = "form-control", tabindex = "5", maxlength = "5" } })
                            </div>
                        </div>
                        <div class="col-xs-2 text-right">
                            <input type="submit" value="Aceptar" tabindex="7" id="bot_acet" name="Command" class="btn btn-primary"
                                   @(Model.bot_acet.Enabled ? "" : "disabled = 'disabled'") />
                            <input type="submit" value="Cancelar" tabindex="8" id="bot_canc" name="Command" class="btn btn-default"
                                   @(Model.bot_canc.Enabled ? "" : "disabled = 'disabled'") />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label class="mono" style="padding-left: 12px;">   Nro. Factura            Nro. Reporte   Fecha Fac.     Tipo Fac.          $ Neto                $ Iva               $ Total</label>
                            @Html.EditorFor(x => x.L_Print, new { htmlAttributes = new { @class = "form-control", tabindex = "6"} })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
}


@section scripts{
@Scripts.Render("~/bundles/FundTransfer/FacturasAsociadas")
}