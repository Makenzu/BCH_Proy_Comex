@using BCH.Comex.Core.Entities.Cext01.ContabilidadGenerica.UI_Forms;
@model UI_FrmgChq
@{ 
    ViewBag.Favicon = @Url.Content("~/Content/img/apps/ingreso-asientos-inv.png");
}

<h3 class="margin-bottom-double" id="tituloParticipantes">Emisión de Cheque-Vale Vista</h3>
<div class="container margin-bottom-double">
    <div class="form-group">
        <label class="mono" style="margin-left: 1em;">Moneda&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Monto&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Tipo&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Generado</label><br />
        @Html.EditorFor(model => model.l_montos, new { htmlAttributes = new { id = "l_montos", @class = "form-control", separatorChar = 9.Char(), tabindex = "1" } })
    </div>
</div>
<div class="container margin-bottom-double">
    <div class="row">
        <div class="col-xs-6">
            
            <div class="form-group">
                <label>Beneficiario</label>
                @Html.EditorFor(x => x.l_benef, new { htmlAttributes = new { id = "l_benef", @class = "form-control"} })
            </div>
            <div class="form-group">
                <label>Nombre</label>
                @Html.EditorFor(x => x.Tx_Nombre, new { htmlAttributes = new { id = "Tx_Nombre", @class = "form-control upper", tabindex = "2", maxlength = "70" } })
            </div>
        </div>
        <div class="col-xs-6">
            
            <div class="form-group">
                <label>Plaza de Pago</label>
                @Html.EditorFor(x => x.l_plaza, new { htmlAttributes = new { id = "l_plaza", @class = "form-control" } })
            </div>
            <div class="form-group">
                <label>Rut</label>
                @Html.EditorFor(x => x.Tx_Rut, new { htmlAttributes = new { id = "Tx_Rut", @class = "form-control upper", maxlength = "14" } })
            </div>
        </div>
    </div>
</div>
<div class="container margin-bottom-double">
    <div class="row">
        <div class="col-xs-10">
            @Html.EditorFor(model => model.l_cor, new { htmlAttributes = new { id = "l_cor", @class = "form-control", separatorChar = 9.Char(), tabindex="3" } })
        </div>
        <div class="col-xs-2">
            <div class="row">
                <div class="col-xs-10">
                    @Html.EditorFor(x => x.Co_Generar, new { htmlAttributes = new { id = "Co_Generar", @class = "btn btn-success btn-block", tabindex = "6", type = "button" } })
                </div>
                <div class="col-xs-10">
                    @Html.EditorFor(x => x.Co_Aceptar, new { htmlAttributes = new { id = "Co_Aceptar", @class = "btn btn-primary btn-block", tabindex = "7", type = "button" } })
                </div>
                <div class="col-xs-10">
                    @Html.EditorFor(x => x.Co_Cancelar, new { htmlAttributes = new { id = "Co_Cancelar", @class = "btn btn-default btn-block", tabindex = "8", type = "button" } })
                </div>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="urlGenerar" value="@Url.Action("Generar","Cheque")" />
<input type="hidden" id="urlAceptar" value="@Url.Action("Aceptar","Cheque")" />
<input type="hidden" id="urlCancelar" value="@Url.Action("Cancelar","Cheque")" />

<input type="hidden" id="urlBenef" value="@Url.Action("Benef","Cheque")" />
<input type="hidden" id="urlPlaza" value="@Url.Action("Plaza","Cheque")" />

@section scripts{
    @Scripts.Render("~/bundles/ContabilidadGenerica/ChequesEmision")
}