@{
    Layout = null;
}

@if (ViewBag.GenerarHtmlCompleto)
{
@: <!DOCTYPE html>
@: <html>
@: <head>
@:     <title>Detalle de Mensaje Swift @ViewBag.Caption</title>
if (ViewBag.Imprimir) {
@:     <script type="text/javascript">
@:         window.onload = function () { window.print(); }
@:      </script>
}
@: </head>
@: <body>
}

<div style='white-space: pre; font-family: Consolas; font-weight: bold; line-height: 1; align-content: center; margin: 10px;'>
@ViewBag.DetalleSwift
</div>
    
@if (ViewBag.GenerarHtmlCompleto)
{
@: </body></html>
}
