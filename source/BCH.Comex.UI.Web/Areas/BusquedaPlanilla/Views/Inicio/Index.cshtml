@model BCH.Comex.UI.Web.Areas.BusquedaPlanilla.Models.BusquedaPlanillaViewModel
@{
    ViewBag.Title = "Búsqueda Planillas";
    ViewBag.Favicon = @Url.Content("~/Content/img/apps/busqueda-planilla-inv.png");
}

<h2>Búsqueda Planillas</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FrmBPla", name = "FrmBPla" }))
{
    @Html.AntiForgeryToken()


    <div class="container">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Filtros</h2>
                </div>
                <div class="panel-body form-horizontal">
                    <div class="form-group">
                        <div class="col-xs-2 col-xs-offset-2">
                            @Html.Label("rbPresentacion", "# Presentación", new { id = "lblPresentacion", @class = "control-label labelRadio" })
                        </div>
                        <div class="col-xs-2">
                            @Html.TextBoxFor(model => model.NroPresentacion, htmlAttributes: new { @class = "form-control input-sm ", maxlength = 7 })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-2 col-xs-offset-2">
                            @Html.Label("rbCUI", "CUI", new { id = "lblCUI", @class = "control-label labelRadio" })
                        </div>
                        <div class="col-xs-1">
                            <input type="text" name="txtCUI" id="txtCUI" class="form-control input-sm" maxlength="3"/>
                        </div>
                    </div>

                    <div class="form-group" id="fgFechaDesde">
                        <div class="col-xs-2 col-xs-offset-2">
                            @Html.Label("chkFecha", "Fecha", new { id = "lblFechaDesde", @class = "control-label labelRadio" })
                        </div>
                        <div class="col-xs-8">
                            <div class="form-inline">
                                <div class="input-group date input-group-sm" id="dtpFechaDesde">
                                    <input type="text" class="form-control" id="txtFechaDesde"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-2 col-xs-offset-4">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="chkPeriodoFechas"> Período
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" id="fgFechaHasta">
                        <div class="col-xs-2 col-xs-offset-2">
                            @Html.Label("lblHasta", "Hasta", new { id = "lblFechaHasta", @class = "control-label labelRadio" })
                        </div>                        
                        <div class="col-xs-8">
                            <div class="form-inline">
                                <div class="input-group date input-group-sm" id="dtpFechaHasta">
                                    <input type="text" class="form-control" id="txtFechaHasta"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6 col-xs-offset-2">
                            <button type="button" id="btnBuscar" class="btn btn-primary"><span class="glyphicon glyphicon-search"></span>&nbsp;&nbsp;Buscar</button>
                            <input type="button" name="Command" id="btnCancelar" value="Cancelar" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Planillas</h2>
                </div>
                <div class="panel-body">
                    <table id="tblPlanillas"></table>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts{
    <script>
    var urlBuscar = '@Url.Action("BuscarOperacion")';
    </script>
    @Scripts.Render("~/bundles/BusquedaPlanilla")
}

@section css{

    <style>
        .pointer {
            cursor: pointer;
        }
    </style>    
}